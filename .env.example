# Google API Key (Get from https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/product_recommendation
CHROMA_DB_PATH=./data/chroma_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security & Authentication
SECRET_KEY=your_super_secret_key_change_this_in_production_min_32_chars
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
# 10080 minutes = 7 days token expiration

# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
